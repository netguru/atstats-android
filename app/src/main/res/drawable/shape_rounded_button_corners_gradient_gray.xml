<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/gradient_button_corner_radius" />

            <gradient
                android:angle="0"
                android:endColor="?attr/colorButtonEnd"
                android:startColor="?attr/colorButtonStart"
                android:type="linear" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/gradient_button_corner_radius" />

            <solid android:color="?attr/colorButtonSolid" />
        </shape>
    </item>
</layer-list>