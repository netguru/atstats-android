<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeColourful" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColorful</item>
        <item name="colorAccent">@color/accentColourful</item>
        <item name="colorPrimaryDark">@color/primaryDarkColourful</item>
        <item name="colorHighlight">@color/accentColourful</item>
        <item name="colorNormal">@color/primaryColorful</item>
    </style>

    <style name="AppThemeNetguru" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryNetguru</item>
        <item name="colorAccent">@color/accentNetguru</item>
        <item name="colorPrimaryDark">@color/primaryDarkNetguru</item>
        <item name="colorHighlight">@color/primaryNetguru</item>
        <item name="colorNormal">@color/black</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppThemeColourful">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Not working when setting the background color here from attrs -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FontSmall.White" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FontMedium.White" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FontLarge.White" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font16.violet" parent="FontSmall.Violet">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSmall.Violet" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/violet</item>
    </style>

    <style name="FontMedium.DarkViolet" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/violet</item>
    </style>

    <style name="FontSmall.Grey" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Font16.Grey" parent="FontSmall.Grey">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSmall.PrimaryDark" parent="TextAppearance.AppCompat.Small" >
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Font12.Grey" parent="FontSmall.Grey">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FontMedium.PrimaryDark" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="FontLarge.PrimaryDark" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Font22.PrimaryDark" parent="FontLarge.PrimaryDark">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Font28.PrimaryDark" parent="FontLarge.PrimaryDark">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="FontDisplay2.PrimaryDark" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="FontMedium.Accent" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="FontLarge.Accent" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="FontLarge.LightGrey" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    
    <style name="FontSmall.Capital.Grey" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">@color/violet</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
