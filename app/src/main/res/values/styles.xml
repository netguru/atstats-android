<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FontLarge.White" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FontSmall.Grey" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="FontSmall.PrimaryDark" parent="TextAppearance.AppCompat.Small" >
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="Font12.Grey" parent="FontSmall.Grey">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FontMedium.PrimaryDark" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">@color/violet</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
