<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeColourful" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColorful</item>
        <item name="colorAccent">@color/accentColourful</item>
        <item name="colorPrimaryDark">@color/primaryDarkColourful</item>
        <item name="colorHighlight">@color/accentColourful</item>
        <item name="colorNormal">@color/primaryColorful</item>
        <item name="colorMain">@color/violet</item>
        <item name="colorTextPrimary">@color/violet</item>
        <item name="colorTextSecondary">@color/violet2</item>
        <item name="colorTextHighlight">@color/violet</item>
        <item name="colorButton">@color/lightPink</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppThemeNetguru" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorHighlight">@color/green</item>
        <item name="colorNormal">@color/black</item>
        <item name="colorMain">@color/green</item>
        <item name="colorTextPrimary">@color/black</item>
        <item name="colorTextSecondary">@color/green2</item>
        <item name="colorTextHighlight">@color/green</item>
        <item name="colorButton">@color/green</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppThemeColourful">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MainToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Not working when setting the background color here from attrs -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FontSmall.White" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FontMedium.White" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FontLarge.White" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font16.ColorTextSecondary" parent="FontSmall.ColorTextSecondary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSmall.ColorTextSecondary" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/colorTextSecondary</item>
    </style>

    <style name="FontMedium.ColorTextPrimary" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="FontSmall.Grey" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Font16.Grey" parent="FontSmall.Grey">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSmall.ColorTextPrimary" parent="TextAppearance.AppCompat.Small" >
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="Font12.Grey" parent="FontSmall.Grey">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FontMedium.PrimaryDark" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="FontLarge.ColorTextPrimary" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="Font22.PrimaryDark" parent="FontLarge.ColorTextPrimary">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Font28.PrimaryDark" parent="FontLarge.ColorTextPrimary">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="FontDisplay2.ColorTextPrimary" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">?attr/colorTextPrimary</item>
    </style>

    <style name="FontMedium.Accent" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="FontLarge.Accent" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="FontLarge.LightGrey" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    
    <style name="FontSmall.Capital.Grey" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextMedium" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium.Highlight" parent="TextAppearance.AppCompat.Medium" >
        <item name="android:textColor">?attr/colorTextHighlight</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
