<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_width"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/card_marginRight"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius_small"
    app:cardElevation="@dimen/card_elevation"
    tools:ignore="missingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_small">

        <ImageView
            android:layout_width="@dimen/channel_icon_size"
            android:layout_height="@dimen/channel_icon_size"
            android:layout_margin="@dimen/margin_very_small"
            android:src="?attr/channelsIconDrawable" />

        <TextView
            android:id="@+id/channelMessagesTextView"
            style="@style/Font24.Accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:autoSizePresetSizes="@array/value_text_sizes"
            app:autoSizeTextType="uniform"
            tools:text="35" />

        <TextView
            android:id="@+id/channelMessagesTitleTextView"
            style="@style/FontSmall.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/channelMessagesTextView"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/card_subtitle_margin"
            android:gravity="end"
            app:autoSizePresetSizes="@array/subtitle_text_sizes"
            app:autoSizeTextType="uniform"
            tools:text="@string/messages" />

        <TextView
            android:id="@+id/channelNameTextView"
            style="@style/FontSmall.PrimaryDark.RobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            app:autoSizePresetSizes="@array/title_text_sizes"
            app:autoSizeTextType="uniform"
            tools:text="#tradeguru-design" />
    </RelativeLayout>
</android.support.v7.widget.CardView>