<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/dashboardStatisticIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            tools:src="@drawable/profile_read_msg" />

        <TextView
            android:id="@+id/dashboardStatisticValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dashboardStatisticText"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:textSize="30sp"
            tools:text="35" />

        <TextView
            android:id="@+id/dashboardStatisticText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:textColor="@color/grey"
            android:textSize="16sp"
            tools:text="total number of read messages" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
