<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/card_corner_radius_small"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/home_screen_item_padding"
        android:paddingStart="@dimen/home_screen_item_padding"
        android:paddingEnd="@dimen/home_screen_item_padding"
        android:paddingBottom="@dimen/margin_small">

        <ImageView
            android:id="@+id/dashboardStatisticIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="?attr/profileReadMsgDrawable" />

        <TextView
            android:id="@+id/dashboardStatisticValue"
            style="@style/Font24.Accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dashboardStatisticText"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            tools:text="35" />

        <TextView
            android:id="@+id/dashboardStatisticText"
            style="@style/Font12.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            tools:text="total number of read messages" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
