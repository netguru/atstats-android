<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        style="@style/TextMedium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="1.3"
        android:drawableLeft="@drawable/channels_orange"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="Channels" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="Najbardziej aktywny kanał"
        android:textAllCaps="true"
        android:textColor="@color/violet2"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelsRecycler1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="Kanał na którym najwięcej piszemy"
        android:textAllCaps="true"
        android:textColor="@color/violet2"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelsRecycler2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="Jesteśmy najczęściej mentionowani"
        android:textAllCaps="true"
        android:textColor="@color/violet2"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelsRecycler3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="12dp" />

</LinearLayout>