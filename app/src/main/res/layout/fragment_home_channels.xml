<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/FontSmall.TertiaryTextColor.RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_zero"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_weight="1.3"
        android:drawablePadding="@dimen/margin_small"
        android:drawableStart="?attr/channelsDrawable"
        android:gravity="center"
        android:text="@string/channels" />

    <TextView
        style="@style/FontSmall.ColorTextSecondary.RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_zero"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="@string/most_active_channel_filter"
        android:textAllCaps="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mostActiveChannelsRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_zero"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_big"
        android:paddingStart="@dimen/margin_default"
        android:paddingTop="@dimen/home_screen_cardsRecycler_paddingTop"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

    <TextView
        style="@style/FontSmall.ColorTextSecondary.RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_zero"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="@string/channel_we_are_most_active"
        android:textAllCaps="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelsWeAreMostActiveRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_zero"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_big"
        android:paddingStart="@dimen/margin_default"
        android:paddingTop="@dimen/home_screen_cardsRecycler_paddingTop"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

    <TextView
        style="@style/FontSmall.ColorTextSecondary.RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_zero"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_weight="0.4"
        android:gravity="center"
        android:text="@string/channel_we_are_mentioned_the_most"
        android:textAllCaps="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channelsWeAreMentionTheMostRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_zero"
        android:layout_weight="3"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_big"
        android:paddingStart="@dimen/margin_default"
        android:paddingTop="@dimen/home_screen_cardsRecycler_paddingTop"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
</LinearLayout>