<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="right|center"
                android:src="@drawable/this_is_totally_a_person" />

            <TextView
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="Welcome back\n @amarok" />

        </LinearLayout>

        <TextView
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/statistics_orange"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="Statistics" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            app:columnCount="2"
            app:rowCount="3">

            <include
                android:id="@+id/statistic1"
                layout="@layout/dashboard_statistics_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <include
                android:id="@+id/statistic2"
                layout="@layout/dashboard_statistics_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <include
                android:id="@+id/statistic3"
                layout="@layout/dashboard_statistics_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <include
                android:id="@+id/statistic4"
                layout="@layout/dashboard_statistics_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <include
                android:id="@+id/statistic5"
                layout="@layout/dashboard_statistics_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <include
                android:id="@+id/statistic6"
                layout="@layout/dashboard_statistics_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />
        </android.support.v7.widget.GridLayout>

    </LinearLayout>
</FrameLayout>